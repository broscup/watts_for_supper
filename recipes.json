            "id": "instant-pot-chili-003",
            "title": "Instant Pot Award Winning Chili",
            "category": "dinner",
            "prep_time": "long",
            "difficulty": "moderate",
            "dietary": ["gluten-free"],
            "summary": "An award-winning hearty chili with ground beef, bacon, and beans.",
            "ingredients": [
                "1.5 pounds ground beef",
                "6 strips bacon",
                "1 can kidney beans",
                "1 can pinto beans",
                "1 can black beans",
                "1 can fire roasted diced tomatoes",
                "1 can tomato paste",
                "1 large red onion",
                "1 red bell pepper",
                "1 jalapeño",
                "2 cups beef stock",
                "various spices"
            ],
            "steps": [
                "Set Instant Pot to sauté mode.",
                "Cook chopped bacon until crispy, then remove and set aside.",
                "Add ground beef and cook until browned.",
                "Add chopped onion, bell pepper, and jalapeño; cook until softened.",
                "Stir in beans, tomatoes, tomato paste, and beef stock.",
                "Add spices and cooked bacon.",
                "Lock the lid and cook on high pressure for 20 minutes.",
                "Release pressure, stir, and serve."
            ],
            "keywords": ["chili", "instant pot", "beef", "bacon"]
        }
    ]
