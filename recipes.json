            "id": "apple-cake-001",
            "title": "Apple Cake",
            "category": "dessert",
            "prep_time": "medium",
            "difficulty": "easy",
            "dietary": ["contains nuts"],
            "summary": "A moist apple cake with cinnamon and chopped nuts.",
            "ingredients": [
                "3 eggs",
                "1 3/4 cups sugar",
                "1 cup oil",
                "2 teaspoons vanilla",
                "2 cups flour",
                "1 teaspoon baking soda",
                "1 1/2 teaspoons cinnamon",
                "1/2 cup chopped nuts",
                "1 teaspoon salt",
                "5 Granny Smith apples"
            ],
            "steps": [
                "Preheat the oven to 350°F (175°C).",
                "Mix eggs, sugar, and oil together.",
                "Add vanilla, flour, baking soda, cinnamon, salt, and nuts.",
                "Stir in chopped apples.",
                "Pour into a greased baking pan and bake for 45 minutes."
            ],
            "keywords": ["apple", "cake", "dessert", "baking"]
        },
